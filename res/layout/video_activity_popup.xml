<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="140dp"
    android:id="@+id/layout_fa">
        <VideoView
            android:id="@+id/popup_player"
            android:layout_centerInParent="true"
            android:layout_width="250dp"
            android:layout_height="140dp" />
        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:background="#66000000"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/img_fullscreen"
                android:src="@mipmap/fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_turnoff"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/img_turnoff"
                android:src="@mipmap/turnoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>
        <CheckBox
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_play"/>
        <TextView
            android:id="@+id/tv_videoname"
            android:layout_alignParentBottom="true"
            android:background="#66000000"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/white"/>

</RelativeLayout>